
@{
    ViewBag.Title = "Index";
}

@Html.ValidationSummary()


<h2>Index</h2>
<form action="" method="post">
    <input type="text" name="Name"  value="@Model.Name" placeholder="Name" class="form-control" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>

    <input type="text" name="Uname"  value="@Model.Uname" placeholder="Username" class="form-control" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Uname")</span>

 
    <input type="text" name="Id"  value="@Model.Id" placeholder="xx-xxxxx-x" class="form-control" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Id")</span>

    <input type="text" name="Email"  value="@Model.Email" placeholder="xx-xxxxx-x@student.aiub.edu" class="form-control" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Email")</span>

    <br />

    <input type="submit" value="Sign Up" class="btn btn-danger" />


</form>

